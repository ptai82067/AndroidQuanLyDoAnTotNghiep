<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền cho View -->
    <solid android:color="#FFFFFF" />

    <!-- Định nghĩa đường viền -->
    <stroke
        android:width="2dp"
        android:color="#050607" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Padding bên trong (tuỳ chọn) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
